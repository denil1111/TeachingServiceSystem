<!doctype html>
<html>
<head>
<% include head.html %>
</head>
<body>
<!-- 上方选择条 navbar-top-->
<% include navbar.html %>
<!-- 侧边框 -->
<% include slide_person_info.html%>
<script type="text/javascript">
   function setNavActive(){
       var active=document.getElementById('infomanage');
           active.className='active';
    }

   function setSlideActive(){
        var slide = document.getElementById('personinfo');
            slide.className='active';
   }

     setNavActive();
     setSlideActive();
</script>

<!-- 主要内容 -->
<div class="main-content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title"><i class="icon-search"></i>修改密码</h3>
          <h5>个人密码修改</h5>
        </div>
      </div>
    </div>
  </div>
  <!-- 信息填写 -->
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">修改密码</span>
      </div>
      <form name="input" action="/info/personpassword" method="post">
        <div class="box-content padded">
          <div class="row-fluid">
            <div class="span9">

              <ul>
                <li class="input">
                  <label>原密码</label>
                  <input type="password" name="password">
                  <font><%= passwordErr %><font>
                </li>
              </ul>

              <ul>
                <li class="input">
                  <label>新密码</label>
                  <input type="password" name="password1" >
                  <font><%= password1Err %><font>
                </li>
                <li class="input">
                  <label>再次输入</label>
                  <input type="password" name="password2" >
                  <font><%= password2Err %><font>
                </li>
              </ul>
            </div>
          </div>
          <button type="submit" class="btn btn-blue">修改</button>
        </div>
      </div>
    </form>
  </div>

  <div class="span10">
    <div class="box">
      <div class="box-header">
        <span class="title">修改结果</span>
      </div>
      <p><span><%= passwordresult %></span></p>
    </div>
  </div>
</div>

</body>
</html>
