<!doctype html>
<html>
<head>
<% include ../head.html %>
</head>
<body>
<!-- 上方选择条 navbar-top-->
<!--% include ../navbar.html %-->
<!-- 侧边框 -->
<% include slide_info.html%>
<script type="text/javascript">
   function setNavActive(){
       var active=document.getElementById('infomanage');
           active.className='active';
    }

   function setSlideActive(){
        var slide = document.getElementById('personmodify');
            slide.className='active';
   }

     setNavActive();
     setSlideActive();
</script>

<!-- 主要内容 -->
<div class="main-content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title"><i class="icon-search"></i>修改用户</h3>
          <h5>填写用户信息</h5>
        </div>
      </div>
    </div>
  </div>
  <!-- 信息填写 -->
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">信息填写</span>
      </div>
      <form name="input" action="/info/personmodify" method="post" enctype="multipart/form-data">
        <div class="box-content padded">
          <div class="row-fluid">
            <div class="span9">
            <!-- 条件选框 -->
              <ul>
                <li class="input">
                  <label>学工号</label>
                  <input type="text" placeholder="e.g. 123456" name="userid" value=<%= data.userid %>>
                  <font><%= useridErr %><font>
                </li>

                <li class="input">
                  <label>姓名</label>
                  <input type="text" placeholder="e.g. Tom" name="username" value=<%= data.username %>>
                  <font><%= userNameErr %><font>
                </li>

                <li class="input">
                  <label>密码</label>
                  <input type="password" placeholder="e.g. 123456" name="password1">
                </li>
                <li class="input">
                  <label>确认密码</label>
                  <input type="password" placeholder="e.g. 123456" name="password2">
                  <font><%= passwordErr %><font>
                </li>

                <li class="input">
                      <label>从本地选择照片</label>
                      <input id="fulAvatar" name="fulAvatar"  style="WIDTH: 150px; HEIGHT: 22px" size="33"  type="file" class="form-control"/>
                  </li>
                <li class="input">
                  <label>身份</label>
                  <!--input type="text" placeholder="课程号" name="status"-->
                  <select name="status">
                    <optgroup lable="管理员">
                      <option value="系统管理员" title ="请确认您是否有相应权限">系统管理员</option>
                      <option value="教务管理员">教务管理员</option>
                    </optgroup>
                    <optgroup lable="用户">
                      <option value="教师">教师</option>
                      <option value="学生" selected="selected">学生</option>
                    </optgroup>
                  </select>
                </li>
                <li class="input">
                  <label>性别</label>
                  <select name="sex">
                      <option value="男" selected="selected">男</option>
                      <option value="女">女</option>
                  </select>
                </li>
                <li class="input">
                  <label>年龄</label>
                  <input type="text" placeholder="e.g. 20" name="age" value=<%= data.age %>>
                  <font><%= ageerr %></font>
                </li>
                <li class="input">
                  <label>专业</label>
                  <input type="text" placeholder="e.g. 计算机科学与技术" name="major" value=<%= data.major %>>
                </li>
                <li class="input">
                  <label>学院</label>
                  <input type="text" placeholder="e.g. 计算机学院" name="college" value=<%= data.college %>>
                </li>
                <li class="input">
                  <label>职称</label>
                  <select name="title">
                    <option value="无" selected="selected">无</option>
                    <option value="讲师">讲师</option>
                    <option value="副教授">副教授</option>
                    <option value="教授">教授</option>
                  </select>
                </li>
                <li class="input">
                  <label>Tel</label>
                  <input type="text" placeholder="e.g. 18868101234" name="tel" value=<%= data.tel %>>
                  <font><%= telerr %></font>
                </li>
                <li class="input">
                  <label>Email</label>
                  <input type="text" placeholder="e.g. email@zju.edu.cn" name="email" value=<%= data.email %>>
                  <font><%= emailerr %></font>
                </li>
              </ul>
              </div>
            </div>
            <button type="submit" class="btn btn-blue">修改</button>
          </div>
        </div>
      </form>
      </div>

      <!-- 修改结果 -->
      <div class="span10">
        <div class="box">
          <div class="box-header">
            <span class="title">修改结果</span>
          </div>
          <p><span><%= modifyresult %></span></p>
        </div>
      </div>
    </div>
</div>

</body>
</html>
