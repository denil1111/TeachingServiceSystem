<!-- 侧边框 -->
<% include slide_person_info.html%>
<script type="text/javascript">
   function setNavActive(){
       var active=document.getElementById('infomanage');
           active.className='active';
    }

   function setSlideActive(){
        var slide = document.getElementById('personinfo');
            slide.className='active';
   }

     setNavActive();
     setSlideActive();
</script>

<!-- 主要内容 -->
<div class="main-content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title"><i class="icon-search"></i>个人信息</h3>
          <h5>点击修改可修改个人信息</h5>
        </div>
      </div>
    </div>
  </div>
  <!-- 信息填写 -->
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">个人信息</span>
      </div>
      <form name="input" action="/info/personinfo" method="post">
        <div class="box-content padded">
          <div class="row-fluid">
            <div class="span9">

              <ul>
                <li class="input">
                  <label>姓名</label>
                  <input type="text" readonly="readonly" name="username" value=<%= person_data.username %>>
                </li>
              </ul>

              <ul>
                <li class="input">
                  <label>个人照片</label>
                  <img class="menu-avatar" src=<%= person_data.photo %> style="width:240px;height:240px"/>
                  <!--img class="menu-avatar" src=<%= person_data.photo %> alt="Base64 encoded image" width="500" height="500"/-->
                  <!--input type="text" readonly="readonly" name="photo" value=<%= person_data.photo %>-->
                </li>
              </ul>

              <ul>
                <li class="input">
                  <label>学号</label>
                  <input type="text" readonly="readonly" name="userid" value=<%= person_data.userid %>>
                </li>
              </ul>

              <ul>
                <li class="input">
                  <label>身份</label>
                  <input type="text" readonly="readonly" name="status" value=<%= person_data.status %>>
                </li>
              </ul>

              <ul>
                <li class="input">
                  <label>性别</label>
                  <input type="text" readonly="readonly" name="sex" value=<%= person_data.sex %>>
                </li>
              </ul>

              <ul>
                <li class="input">
                  <label>年龄</label>
                  <input type="text" readonly="readonly" name="age" value=<%= person_data.age %>>
                </li>
              </ul>

              <ul>
                <li class="input">
                  <label>专业</label>
                  <input type="text" readonly="readonly" name="major" value=<%= person_data.major %>>
                </li>
              </ul>

              <ul>
                <li class="input">
                  <label>学院</label>
                  <input type="text" readonly="readonly" name="college" value=<%= person_data.college %>>
                </li>
              </ul>

              <ul>
                <li class="input">
                  <label>职称</label>
                  <input type="text" readonly="readonly" name="title" value=<%= person_data.title %>>
                </li>
              </ul>


              <ul>
                <li class="input">
                  <label>电话</label>
                  <input type="text" readonly="readonly" name="tel" value=<%= person_data.tel %>>
                </li>
              </ul>

              <ul>
                <li class="input">
                  <label>邮箱</label>
                  <input type="text" readonly="readonly" name="email" value=<%= person_data.email %>>
                </li>
              </ul>
            </div>
          </div>
          <button type="submit" class="btn btn-blue">修改</button>
        </div>
      </div>
    </form>
  </div>
</div>

</body>
</html>


