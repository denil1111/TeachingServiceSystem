<!doctype html>
<html>
<head>
<% include ../head.html %>
</head>
<body>
<!-- 上方选择条 navbar-top-->
<% include ../navbar.html %>
<!-- 侧边框 -->
<% include slide_info.html%>
<script type="text/javascript">
   function setNavActive(){
       var active=document.getElementById('infomanage');
           active.className='active';
    }

   function setSlideActive(){
        var slide = document.getElementById('courseinsert');
            slide.className='active';
   }

     setNavActive();
     setSlideActive();
</script>

<!-- 主要内容 -->
<div class="main-content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title"><i class="icon-search"></i>添加课程</h3>
          <h5>课程信息</h5>
        </div>
      </div>
    </div>
  </div>
  <!-- 信息填写 -->
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">信息填写</span>
      </div>
      <form name="input" action="/info/courseinsert" method="post">
        <div class="box-content padded">
          <div class="row-fluid">
            <div class="span9">
            <!-- 条件选框 -->
              <ul>
                <li class="input">
                  <label>课程名称</label>
                  <input type="text" placeholder="e.g. 软件工程" name="coursename" value=<%= data.coursename %>>
                </li>

                <li class="input">
                  <label>课程ID</label>
                  <input type="text" placeholder="e.g. 1234" name="courseid2" value=<%= data.courseid2 %>>
                </li>

                <li class="input">
                  <label>课程学期</label>
                  <select name="courseterm">
                    <option value="春" selected="selected">春</option>
                    <option value="夏">夏</option>
                    <option value="秋">秋</option>
                    <option value="冬">冬</option>
                    <option value="春夏">春夏</option>
                    <option value="秋冬">秋冬</option>
                  </select>
                </li>

                <li class="input">
                  <label>上课时间</label>
                  <input type="text" placeholder="e.g. 周三第1、2节" name="coursetime" value=<%= data.coursetime %>>
                </li>

                <li class="input">
                  <label>课程学分</label>
                  <select name="coursescore">
                    <option value="0.5">0.5</option>
                    <option value="1.0">1.0</option>
                    <option value="1.5">1.5</option>
                    <option value="2.0" selected="selected">2.0</option>
                    <option value="2.5">2.5</option>
                    <option value="3.0">3.0</option>
                    <option value="3.5">3.5</option>
                    <option value="4.0">4.0</option>
                    <option value="4.5">4.5</option>
                    <option value="5.0">5.0</option>
                  </select>
                </li>

                <li class="input">
                  <label>授课老师</label>
                  <input type="text" placeholder="e.g. 王章野" name="teacher" value=<%= data.teacher %>>
                </li>
                <li class="input">
                  <label>考试时间</label>
                  <input type="text" placeholder="e.g. 2015.07.01 8:00-10:00" name="examtime" value=<%= data.examtime %>>
                </li>
                <li class="input">
                  <label>上课教室</label>
                  <input type="text" placeholder="e.g. 教7-602" name="room" value=<%= data.room %>>
                </li>
                <li class="input">
                  <label>上课校区</label>
                  <select name="campus">
                    <option value="紫金港校区" selected="selected">紫金港校区</option>
                    <option value="玉泉校区">玉泉校区</option>
                    <option value="西溪校区">西溪校区</option>
                    <option value="之江校区">之江校区</option>
                    <option value="华家池校区">华家池校区</option>
                    <option value="舟山校区">舟山校区</option>
                  </select>
                </li>
                <li class="input">
                  <label>开课学院</label>
                  <input type="text" placeholder="e.g. 计算机学院" name="college" value=<%= data.college %>>
                </li>
              </ul>
              </div>
            </div>
            <button type="submit" class="btn btn-blue">添加</button>
          </div>
        </div>
      </form>
      </div>

      <!-- 搜索结果 -->
      <div class="span10">
        <div class="box">
          <div class="box-header">
            <span class="title">添加结果</span>
          </div>
          <p><span><%= insertresult %></span></p>
        </div>
      </div>
    </div>
</div>

</body>
</html>
