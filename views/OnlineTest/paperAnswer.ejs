<!DOCTYPE html>
<html>
  <head>
    <title>Online Test - Answer</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <script type="text/javascript">
      var seconds = 0;
      var minutes = 0;
      var hours = 0;
      var t;

      var flag = false;

      function timeCount() {
          if(!flag){
            document.getElementById('problems').style.display = ("block");
            flag = true;
          }
          function addZero(num) {
              var buffer = '';
              if (num < 10) {
                  buffer = '0' + num;
              }
              else {
                  buffer = num.toString();
              }
              return buffer;
          }
          document.getElementById('txt').value = addZero(hours)+ ':' + addZero(minutes) + ':' + addZero(seconds);
          seconds = seconds + 1;
          if (seconds == 60) {
              seconds = 0;
              minutes = minutes + 1;
          }
          if (minutes == 60) {
              minutes = 0;
              hours = hours + 1;
          }

          t = setTimeout("timeCount()", 1000)
      }
    </script>

    <h1>答题: <%= paper.title %></h1>
    <%
      if(done){
    %>
      <h1>您已完成答题。您的分数：<%= point %>，答题时间：<%= time %></h1>
    <%
      }
      else{
    %>
    <ul>
      <form method="post">
      <input type="button" value="开始答题" onclick="timeCount()" />
      <br/>
      <p>计时：</p>
      <input name="clock" type="text" id="txt" readonly/>
      
      <div id="problems" style="display:none;">
      <% for(var i = 0; i < problemsInPaper.length; i++){
          var problem = problemsInPaper[i];
          if(problem.type == 0){
      %>
        <li>
        <%= problem.stem %>
        <br/>
        <input type="radio" name="<%= problem._id %>" value="1" />A.<%= problem.choice[0] %>
        <br/>
        <input type="radio" name="<%= problem._id %>" value="2" />B.<%= problem.choice[1] %>
        <br/>
        <input type="radio" name="<%= problem._id %>" value="3" />C.<%= problem.choice[2] %>
        <br/>
        <input type="radio" name="<%= problem._id %>" value="4" />D.<%= problem.choice[3] %>
        </li>
      <% }else{ %>
      <li>
        <%= problem.stem %>
        <br/>
        <input type="radio" name="<%= problem._id %>" value="1" />Ture
        <br/>
        <input type="radio" name="<%= problem._id %>" value="0" />False
        </li>
      <% }} %>
      <input type='submit', value='确认提交'/>
      </div>

      </form>
    </ul>
    <% } %>
  </body>
</html>