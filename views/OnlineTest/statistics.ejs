<!DOCTYPE html>
<html>
  <head>  
    <% include ../head.html %>
  </head>

  <body>
    <% include ../navbar.html %>
    <% include slide_teacher.html %>

    <div class="main-content">
        <div class="span12">
            <div class="box">
                <div class="box-header">
                    <div class="title">试卷列表</div>
                </div>
                <div class="box-content">
                    <div class="col-lg-6">
                        
                        <ul class="padded separate-sections">
                            <form method="post">
                                <% for(var i = 0; i < titles.length; i++){ %>
                                <li>
                                    <%= titles[i] %>(总分: <%= totalpoints[i] %>)  <input type='radio', name='choosePaper', value="<%= i %>">
                                </li>
                                <% } %>
                                <li>
                                    <label>输入划分的分隔分数，现在有</label><div id="count"></div>
                                </li>
                                <div id="moreInput"></div>
                                <button type='submit', class="btn btn-blue">提交</button>
                            </form>
                            <button class="btn btn-blue", onclick="addInput()">添加条目</button>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="box">
                <div class="box-header">
                    <div class="title">图表显示</div>
                </div>
                <div class="box-content">
                    <% include  echart.html %>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        var i = 0;

        function addInput()
        {
            var mf = document.getElementById("moreInput");
            var counter = document.getElementById("count");
            
            var html = "<li><input type='text', style='margin-top:10px;', placeholder='输入分割分数线，如60', name='parag" + i + "'/></li>";
            
            i++;
            counter.innerHTML = "<input type='text', value='" + i + "', name='counter'/>";

            mf.innerHTML += html;
        }
    </script>
  </body>