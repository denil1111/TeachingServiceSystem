<!doctype html>
<html>
<head>
          <% include head.html %>
            <script type="text/javascript" src="/javascripts/vendor/jquery.easyui.min.js"></script>
            <link rel="stylesheet" type="text/css" href="/stylesheets/easyui.css">
            <link rel="stylesheet" type="text/css" href="/stylesheets/icon.css">
          <style>
          .action-nav-button{
            width: 15%;
          }
              #chosen-add-button{
                  display:none;
              }
          </style>

        <script>
            //jquery 1.6以后
            function chooseAll(){
                //            console.log("in chooseAll");
                var isChecked=$("#all-choose").prop("checked");
                if(isChecked==false)
                {
                    $("input[name=choose]").prop("checked",false);
                }
                else
                {
                    $("input[name=choose]").prop("checked",true);
                }
//                $("#chosen-add-button").show();
            };

            $(document).ready(function(){
                $("input[name=choose]").click(function(){
                    var flag=false;
                    $("input[name=choose]").each(function(){
                        if($(this).prop("checked")==true)
                        {
                            flag=true;
                            $("#chosen-add-button").show();
                            return false;
                        }
                    });
                    if(flag!=true)
                    {
                        $("#chosen-add-button").hide();
                    }
                });
            });







        </script>

</head>
<body>
<!-- 上方选择条 navbar-top-->
<% include navbar.html %>
<!-- 侧边框 -->
<% include slide.html%>


<!-- 主要内容 -->
<div class="main-content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title"><i class=" icon-briefcase"></i>资源管理系统</h3>
          <h5>管理所有课程的资源</h5>
        </div>
      </div>
    </div>
  </div>

    <div class="span10" style="margin-left:50px;">
        <div class="row">
            <div class="action-nav-normal action-nav-line">
                <div class="row action-nav-row" style="margin-top:20px;">
                    <div class="action-nav-button">
                        <a data-toggle="modal" href="#modal-upload" class="btn btn-blue"><i class="icon-plus"></i><span>上传新文件</span></a>
                    </div>

                    <div class="col-sm-2 action-nav-button">
                            <a data-toggle="modal" href="#modal-newfolder" class="btn btn-blue"><i class="icon-folder-open-alt"></i><span>新建文件夹</span></a>
                    </div>

                    <div class="col-sm-2 action-nav-button">
                        <a href="#" title="Messages">
                            <i class="icon-reply"></i>
                           <span>返回上级文件夹</span>
                        </a>
                    </div>
        </div>
    </div>

<div class="span10">
    <div class="box">
      <div class="box-header">
        <span class="title">我上传的资源</span>
        <ul class="box-toolbar">
          <li><span class="label label-blue">length</span></li>
        </ul>
      </div>
    <div class="box-content" >
    <table class="table table-normal">
      <thead>
      <tr>
        <td></td>
        <td><input type="checkbox" id="all-choose" name="choose" onclick="chooseAll()">全选</td>
        <td>资源名称</td>
        <td style="width: 60px">资源类型</td>
        <td style="width: 60px">资源大小</td>
        <td>课程</td>
        <td style="width: 120px"></td>
      </tr>
      </thead>

      <tbody>
      <tr>
        <td class="icon"><i class="icon-folder-close"></i></td>
          <td><input type="checkbox" name="choose"></td>
        <td><a href="#">软件工程文件夹1</a></td>
        <td><b>pdf</b></td>
        <td><b>1.2M</b></td>
        <td><b>软件工程</b></td>
        <td>
          <div class="btn-group">
            <button class="btn btn-xs btn-default"><i class="icon-remove-sign"></i></button>
            <button class="btn btn-xs btn-default"><i class="icon-download-alt"></i></button>

            <button class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown"><i class="icon-cog"></i></button>
            <ul class="dropdown-menu">
              <li><a data-toggle="modal" href="#modal-rename">重命名</a></li>
              <li><a data-toggle="modal" href="#modal-move">移动到</a></li>
            </ul>
          </div>
        </td>
      </tr>

      <% fileList.forEach(function (file) { %>
      <tr>
        <td class="icon"><i class="icon-file"></i></td>
          <td><input type="checkbox" name="choose"></td>
        <td><a href="#"> <%= file.name %></a></td>
        <td><b><%= file.ext %></b></td>
        <td><b><%= file.size %></b></td>
        <td><b><%= file.courseName %></b></td>
        <td>
          <div class="btn-group">
            <form style="display: inline-block" method="get" action="/resource/cloud/download/<%=file.name %>">
              <button class="btn btn-xs btn-default"><i class="icon-remove-sign"></i></button>
              <button class="btn btn-xs btn-default" type="submit"><i class="icon-download-alt"></i></button>
            </form>
              <button class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown"><i class="icon-cog"></i></button>
              <ul class="dropdown-menu">
                  <li><a data-toggle="modal" href="#modal-rename">重命名</a></li>
                  <li><a data-toggle="modal" href="#modal-move">移动到</a></li>
              </ul>
          </div>
        </td>
      </tr>
      <% })%>
      </tbody>
    </table>
    <div id="chosen-add-button">
        <button class="btn btn-xs btn-default">删除</button>
        <button class="btn btn-xs btn-default">下载</button>
    </div>
  </div>
</div>


    <div id="modal-upload" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">上传新文件</h4>
                </div>
                <div class="modal-body">
                    <input type="file"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-blue">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal --><!-- find me in partials/modal_form -->

    <div id="modal-newfolder" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">新建文件夹</h4>
                </div>
                <div class="modal-body">
                    <div style="width:200px;height:auto;border:1px solid #ccc;">
                        <ul id="tt" class="easyui-tree" url="/tree_data.json"></ul>
                    </div>
                    <label>请输入新建文件夹的名称</label>
                    <input type="text"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-blue">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal --><!-- find me in partials/modal_form -->

    <div id="modal-rename" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">新建文件夹</h4>
                </div>
                <div class="modal-body">
                    <label>请输入修改名称</label>
                    <input type="text"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-blue">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal --><!-- find me in partials/modal_form -->

    <div id="modal-move" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">新建文件夹</h4>
                </div>
                <div class="modal-body">
                    <label>请选择移动到哪个文件夹</label>
                    <!--<div class="easyui-tree">-->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-blue">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal --><!-- find me in partials/modal_form -->


</div>
</body>
</html>