<script type="text/javascript">
  function show_table_content(){
    //预先处理文件，隐藏btn_table
    $("#btn_table").hide();
    //处理字符串 找到相应位置 添加课程
    <% for(var i=0; i<course_data.length;i++) { %>
      var time="<%=course_data[i].coursetime%>";
      var time_arr=time.split(',');
      var course_name="<%=course_data[i].coursename%>";
      var course_teacher="<%=course_data[i].teacher%>";
      var course_room="<%=course_data[i].room %>";
      var course_campus="<%=course_data[i].campus %>";
      var data = course_name + " " + course_teacher + " " + course_campus + " " + course_room;
      
      console.log(time);
      for(var j=0;j<time_arr.length;j++){
        var str;
        switch(time_arr[j][0]){
          case '1': str="Mon";break; 
          case '2': str="Tue";break;
          case '3': str="Web";break; 
          case '4': str="Thu";break; 
          case '5': str="Fri";break; 
          case '6': str="Sat";break; 
          case '7': str="Sun";break;
        }
        switch(time_arr[j][1]){
          case '1':
            document.getElementById(str+'12').innerHTML=data;
            break;
          case '2':
            document.getElementById(str+'345').innerHTML=data;
            break;
          case '3':
            document.getElementById(str+'678').innerHTML=data;
            break;
          case '4':
            document.getElementById(str+'910').innerHTML=data;
            break;
          case '5':
            document.getElementById(str+'_night').innerHTML=data;
            break;
        }
        console.log(str);
      }
    <% } %>
  }
  
  function show_list(){
    document.getElementById('layout').innerHTML="列表显示";
    $("#list_layout").fadeIn();
    $("#table_layout").fadeOut();
    $("#btn_list").show();
    $("#btn_table").hide();
  }
  function show_table(){
    document.getElementById('layout').innerHTML="表格显示";
    $("#list_layout").fadeOut();
    $("#table_layout").fadeIn();
    $("#btn_list").hide();
    $("#btn_table").show();
  }
  show_table_content();
</script>
