        <td>
          <div class="btn-group">
            <%if(courses[0].status=="on"){%>
            <button class="btn btn-xs btn-default dropdown-toggle" type="submit"><i class="icon-cog"> 修改</i></button>
            <%} else if(courses[0].status=="off"){%>
            <button class="btn btn-xs btn-default dropdown-toggle" type="submit"><i class="icon-cog"> 提交申请</i></button>
            <%}%>
          </div>
        </td>
      </tr>
      </form>
      <%}%>
      </tbody>
    </table>
  </div>
</div>

<%if(courses[0].status=="on"){%>
<form action="gradesSubmit" target="_blank" method="post"> 
